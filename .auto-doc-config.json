{
    "project_name": "原型生成器",
    "core_files": [
        "server.py",
        "src/script.js",
        "src/viewer.html",
        "src/index.html",
        "export_project.py",
        "split_to_modao.py"
    ],
    "doc_dir": "docs",
    "backup_dir": "backups",
    "doc_mapping": {
        "server.py": [
            "docs/api.md",
            "docs/architecture.md"
        ],
        "src/script.js": [
            "docs/features.md"
        ],
        "src/viewer.html": [
            "docs/features.md"
        ],
        "src/index.html": [
            "docs/features.md"
        ],
        "export_project.py": [
            "docs/features.md"
        ],
        "split_to_modao.py": [
            "docs/features.md"
        ],
        "templates/": [
            "docs/best_practices.md"
        ]
    },
    "doc_updaters": {
        "api.md": {
            "triggers": [
                "server.py"
            ],
            "enabled": true,
            "insert_section": "## 1. 项目管理"
        },
        "features.md": {
            "triggers": [
                "src/script.js",
                "src/index.html",
                "src/viewer.html"
            ],
            "enabled": true,
            "insert_section": "## 2. 项目管理"
        }
    },
    "exclude_patterns": [
        "*.log",
        "*.pyc",
        "__pycache__",
        "node_modules",
        ".git",
        "projects/",
        "exports/",
        "tomodao/",
        "deleted/"
    ]
}